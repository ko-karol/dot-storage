{
	"include": [
		"src/**/*",
	],
	"compilerOptions": {
		"baseUrl": "",
		"paths": {
			"@/*": [
				"src/*",
				"types/*"
			],
		},
		"lib": [
			"ES6",
			"DOM"
		],
		"target": "ES6",
		"diagnostics": true,
		"noImplicitAny": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"noEmit": true,
		"allowImportingTsExtensions": true,
		"noImplicitReturns": true,
		"strict": true,
	}
}